{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "labels": [
        "dependencies"
    ],
    "lockFileMaintenance": {
        "automerge": true,
        "enabled": true
    },
    "schedule": ["* 0 1 * 0"],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "major"
            ],
            "reviewers": [
                "rpdelaney"
            ]
        },
        {
            "automerge": true,
            "matchUpdateTypes": [
                "patch",
                "pin",
                "digest",
                "minor"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github-actions",
            "automerge": false,
            "schedule": ["* 0 1 * *"],
            "reviewers": [
                "rpdelaney"
            ]
        }
    ],
    "separateMinorPatch": false,
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0
}
