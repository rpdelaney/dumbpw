# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.py]
balanced_wrapping = true
indent_size = 4
max_line_length = 79
not_skip = __init__.py
quote_type = double
skip = build,.tox,.venv
trim_trailing_whitespace = true

[*.{rst,ini}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[LICENSE]
insert_final_newline = false
